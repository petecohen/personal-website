---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const allBlogPosts = await getCollection('blog', ({ data }) => {
  return data.draft !== true;
});

const sortedPosts = allBlogPosts.sort((a, b) =>
  b.data.date.valueOf() - a.data.date.valueOf()
);
---

<Layout
  title="Blog - Pete Cohen"
  description="Writing and links to published work"
>
  <div class="max-w-4xl mx-auto px-6 py-16">
    <div class="mb-12">
      <h1 class="text-4xl font-bold mb-4">Blog</h1>
      <p class="text-lg text-[var(--color-text-muted)]">
        Longer-form writing and links to things I've published elsewhere.
        <a href="/blog/feed.xml" class="text-[var(--color-accent)] hover:text-[var(--color-accent-hover)]">Subscribe via RSS</a>
      </p>
    </div>

    <div class="space-y-8">
      {sortedPosts.map(post => (
        <article class="border-b border-[var(--color-border)] pb-8">
          <a
            href={`/blog/${post.slug}`}
            class="group"
          >
            <h2 class="text-2xl font-semibold mb-2 group-hover:text-[var(--color-accent)] transition-colors">
              {post.data.title}
            </h2>
            <time class="text-sm text-[var(--color-text-muted)] block mb-3">
              {post.data.date.toLocaleDateString('en-US', {
                year: 'numeric',
                month: 'long',
                day: 'numeric'
              })}
            </time>
            <p class="text-[var(--color-text-muted)]">
              {post.data.summary}
            </p>
          </a>
        </article>
      ))}
    </div>
  </div>
</Layout>
